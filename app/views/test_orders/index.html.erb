<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Test Orders</h1>
      <p class="mt-2 text-gray-600">View and manage laboratory test orders</p>
    </div>

    <!-- Test Orders List -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <% if @test_orders.any? %>
        <div class="divide-y divide-gray-200">
          <% @test_orders.each do |test_order| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <!-- Patient/Doctor Info -->
                  <div class="flex items-center gap-4 mb-2">
                    <% if current_doctor? %>
                      <h3 class="text-lg font-semibold text-gray-900">
                        <%= test_order.patient.full_name %>
                      </h3>
                      <span class="text-sm text-gray-500">Patient</span>
                    <% else %>
                      <h3 class="text-lg font-semibold text-gray-900">
                        Dr. <%= test_order.doctor.full_name %>
                      </h3>
                      <span class="text-sm text-gray-500"><%= test_order.doctor.specialization %></span>
                    <% end %>
                  </div>

                  <!-- Appointment Reference -->
                  <% if test_order.appointment.present? %>
                    <div class="flex items-center gap-2 text-sm text-gray-600 mb-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      <span>Appointment: <%= test_order.appointment.scheduled_start.strftime("%b %d, %Y at %I:%M %p") %></span>
                      <%= link_to "View", appointment_path(test_order.appointment), class: "text-primary-600 hover:text-primary-800" %>
                    </div>
                  <% end %>

                  <!-- Created Date -->
                  <div class="text-sm text-gray-500 mb-3">
                    <span>Ordered on <%= test_order.created_at.strftime("%b %d, %Y at %I:%M %p") %></span>
                  </div>

                  <!-- Test Description -->
                  <div class="mb-3">
                    <h4 class="text-sm font-medium text-gray-700 mb-1">Test Description:</h4>
                    <p class="text-sm text-gray-900"><%= test_order.description %></p>
                  </div>

                  <!-- Message to Patient -->
                  <% if test_order.message_to_patient.present? %>
                    <div class="mb-3">
                      <h4 class="text-sm font-medium text-gray-700 mb-1">Instructions:</h4>
                      <p class="text-sm text-gray-900"><%= test_order.message_to_patient %></p>
                    </div>
                  <% end %>

                  <!-- Test Results Status -->
                  <div class="flex items-center gap-2">
                    <% if test_order.test_result_uploads.any? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <%= pluralize(test_order.test_result_uploads.count, 'result') %> uploaded
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                        </svg>
                        Awaiting results
                      </span>
                    <% end %>

                    <!-- Review Status for Uploaded Results -->
                    <% if current_doctor? && test_order.test_result_uploads.any? %>
                      <% pending_count = test_order.test_result_uploads.pending_review.count %>
                      <% if pending_count > 0 %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                          <%= pluralize(pending_count, 'result') %> pending review
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          All results reviewed
                        </span>
                      <% end %>
                    <% end %>
                  </div>
                </div>

                <!-- Actions -->
                <div class="ml-4 flex-shrink-0">
                  <%= link_to "View Details", test_order_path(test_order), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
          <%= paginate @test_orders %>
        </div>
      <% else %>
        <div class="p-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No test orders</h3>
          <p class="mt-1 text-sm text-gray-500">
            <% if current_doctor? %>
              You haven't ordered any tests yet. Test orders can be created during appointments.
            <% else %>
              No test orders have been prescribed for you yet.
            <% end %>
          </p>
          <% if current_patient? %>
            <div class="mt-6">
              <%= link_to "View Appointments", appointments_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
