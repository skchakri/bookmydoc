<%# Turbo Stream response for creating test order %>

<turbo-stream action="append" target="test-orders-list">
  <template>
    <div id="test_order_<%= @test_order.id %>" class="border border-blue-200 rounded-lg p-4 bg-blue-50 mb-3">
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <div class="flex items-center space-x-2 mb-2">
            <div class="h-8 w-8 bg-blue-600 rounded-lg flex items-center justify-center">
              <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900">New Test Order</h3>
          </div>

          <div class="bg-white border border-gray-200 rounded p-3 mb-2">
            <p class="text-sm font-medium text-gray-700">Tests Required:</p>
            <p class="text-sm text-gray-900 mt-1"><%= @test_order.description %></p>
          </div>

          <% if @test_order.message_to_patient.present? %>
            <div class="bg-white border border-gray-200 rounded p-3">
              <p class="text-sm font-medium text-gray-700">Instructions:</p>
              <p class="text-sm text-gray-900 mt-1"><%= @test_order.message_to_patient %></p>
            </div>
          <% end %>

          <div class="mt-3 flex items-center justify-between">
            <p class="text-xs text-gray-500">
              Ordered <%= time_ago_in_words(@test_order.created_at) %> ago
            </p>
            <%= link_to "Upload Results", new_test_result_upload_path(test_order_id: @test_order.id), class: "btn btn-sm btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </template>
</turbo-stream>

<turbo-stream action="prepend" target="flash-messages">
  <template>
    <div class="bg-blue-50 text-blue-800 border border-blue-200 rounded-lg p-4 mb-4" role="alert">
      <div class="flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
        <span>Test order created! Patient has been notified.</span>
      </div>
    </div>
  </template>
</turbo-stream>
