<%# Turbo Stream response for creating appointment slot %>

<turbo-stream action="append" target="appointment-slots-list">
  <template>
    <div id="appointment_slot_<%= @appointment_slot.id %>" class="border border-gray-200 rounded-lg p-4 bg-white mb-3">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="font-semibold text-gray-900">
            <%= @appointment_slot.start_time.strftime('%A, %B %d, %Y') %>
          </h3>
          <p class="text-sm text-gray-600 mt-1">
            <%= @appointment_slot.start_time.strftime('%I:%M %p') %> -
            <%= @appointment_slot.end_time.strftime('%I:%M %p') %>
          </p>
          <p class="text-xs text-gray-500 mt-1">
            <%= @appointment_slot.frequency_minutes %> min slots
          </p>
        </div>
        <div class="flex items-center space-x-2">
          <span class="badge <%= @appointment_slot.is_open ? 'badge-success' : 'badge-danger' %>">
            <%= @appointment_slot.is_open ? 'Open' : 'Closed' %>
          </span>
          <%= link_to "Edit", edit_doctors_appointment_slot_path(@appointment_slot), class: "text-primary-600 hover:text-primary-700 text-sm font-medium" %>
        </div>
      </div>
    </div>
  </template>
</turbo-stream>

<turbo-stream action="prepend" target="flash-messages">
  <template>
    <div class="bg-green-50 text-green-800 border border-green-200 rounded-lg p-4 mb-4" role="alert">
      <div class="flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        <span>Availability slot added successfully!</span>
      </div>
    </div>
  </template>
</turbo-stream>
