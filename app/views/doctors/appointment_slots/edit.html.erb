<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to doctors_appointment_slots_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Availability Schedule
      <% end %>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="bg-primary-600 px-6 py-4">
        <h1 class="text-2xl font-bold text-white">Edit Availability Slot</h1>
        <p class="text-primary-100 text-sm mt-1">Update your availability settings</p>
      </div>

      <div class="p-6">
        <%= form_with model: @appointment_slot, url: doctors_appointment_slot_path(@appointment_slot), method: :patch, local: true, class: "space-y-6" do |f| %>
          <!-- Error Messages -->
          <% if @appointment_slot.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    <%= pluralize(@appointment_slot.errors.count, "error") %> prohibited this availability slot from being saved:
                  </h3>
                  <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                    <% @appointment_slot.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Current Info Box -->
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
            <h3 class="text-sm font-medium text-gray-900 mb-3">Current Slot Details</h3>
            <div class="grid grid-cols-2 gap-4 text-sm">
              <div>
                <span class="text-gray-600">Start:</span>
                <span class="font-medium text-gray-900 ml-2"><%= @appointment_slot.start_time.strftime("%b %d, %Y %I:%M %p") %></span>
              </div>
              <div>
                <span class="text-gray-600">End:</span>
                <span class="font-medium text-gray-900 ml-2"><%= @appointment_slot.end_time.strftime("%b %d, %Y %I:%M %p") %></span>
              </div>
              <div>
                <span class="text-gray-600">Duration:</span>
                <span class="font-medium text-gray-900 ml-2"><%= @appointment_slot.frequency_minutes %> minutes</span>
              </div>
              <div>
                <span class="text-gray-600">Status:</span>
                <span class="font-medium <%= @appointment_slot.is_open ? 'text-green-600' : 'text-red-600' %> ml-2">
                  <%= @appointment_slot.is_open ? 'Open' : 'Closed' %>
                </span>
              </div>
            </div>
          </div>

          <!-- Start Time -->
          <div>
            <%= f.label :start_time, "Start Date & Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.datetime_local_field :start_time,
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm",
                required: true %>
            <p class="mt-1 text-xs text-gray-500">When does this availability slot begin?</p>
          </div>

          <!-- End Time -->
          <div>
            <%= f.label :end_time, "End Date & Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.datetime_local_field :end_time,
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm",
                required: true %>
            <p class="mt-1 text-xs text-gray-500">When does this availability slot end?</p>
          </div>

          <!-- Frequency -->
          <div>
            <%= f.label :frequency_minutes, "Appointment Duration (minutes)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :frequency_minutes,
                options_for_select([
                  ['15 minutes', 15],
                  ['30 minutes', 30],
                  ['45 minutes', 45],
                  ['60 minutes', 60],
                  ['90 minutes', 90],
                  ['120 minutes', 120]
                ], @appointment_slot.frequency_minutes),
                {},
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm" %>
            <p class="mt-1 text-xs text-gray-500">
              This slot will be divided into appointment windows of this duration.
            </p>
          </div>

          <!-- Status -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Availability Status</label>
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <%= f.check_box :is_open,
                    class: "h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-500" %>
              </div>
              <div class="ml-3">
                <%= f.label :is_open, class: "text-sm text-gray-700" do %>
                  <span class="font-medium">Open for bookings</span>
                  <p class="text-xs text-gray-500 mt-1">Uncheck this to temporarily close this slot without deleting it</p>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Warning for Past Slots -->
          <% if @appointment_slot.end_time < Time.current %>
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-yellow-800">Past Availability Slot</h3>
                  <p class="mt-1 text-sm text-yellow-700">
                    This slot has already ended. You can still edit it, but it won't appear as available for new bookings.
                  </p>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Action Buttons -->
          <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-200">
            <%= link_to "Cancel", doctors_appointment_slots_path,
                class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
            <%= f.submit "Update Availability Slot",
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Danger Zone -->
    <div class="mt-6 bg-white rounded-lg shadow-md overflow-hidden border border-red-200">
      <div class="bg-red-50 px-6 py-4 border-b border-red-200">
        <h2 class="text-lg font-semibold text-red-900">Danger Zone</h2>
      </div>
      <div class="p-6">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <h3 class="text-sm font-medium text-gray-900">Delete this availability slot</h3>
            <p class="text-sm text-gray-600 mt-1">
              Once deleted, this slot will be permanently removed. Any existing appointments made during this slot will not be affected.
            </p>
          </div>
          <div class="ml-4">
            <%= button_to "Delete Slot",
                doctors_appointment_slot_path(@appointment_slot),
                method: :delete,
                data: { turbo_confirm: "Are you sure you want to delete this availability slot? This action cannot be undone." },
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
