<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Availability Schedule</h1>
        <p class="mt-2 text-gray-600">Manage your appointment availability slots</p>
      </div>
      <%= link_to "Create New Slot", new_doctors_appointment_slot_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
    </div>

    <!-- Appointment Slots List -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <% if @appointment_slots.any? %>
        <!-- Table Header -->
        <div class="bg-gray-50 px-6 py-3 border-b border-gray-200">
          <div class="grid grid-cols-12 gap-4 text-xs font-medium text-gray-500 uppercase tracking-wider">
            <div class="col-span-3">Date & Time</div>
            <div class="col-span-2">Duration</div>
            <div class="col-span-2">Frequency</div>
            <div class="col-span-2">Status</div>
            <div class="col-span-3 text-right">Actions</div>
          </div>
        </div>

        <!-- Table Body -->
        <div class="divide-y divide-gray-200">
          <% @appointment_slots.each do |slot| %>
            <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
              <div class="grid grid-cols-12 gap-4 items-center">
                <!-- Date & Time -->
                <div class="col-span-3">
                  <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-900">
                      <%= slot.start_time.strftime("%b %d, %Y") %>
                    </span>
                    <span class="text-sm text-gray-600">
                      <%= slot.start_time.strftime("%I:%M %p") %> - <%= slot.end_time.strftime("%I:%M %p") %>
                    </span>
                  </div>
                </div>

                <!-- Duration -->
                <div class="col-span-2">
                  <span class="text-sm text-gray-900">
                    <%= ((slot.end_time - slot.start_time) / 3600).round(1) %> hours
                  </span>
                </div>

                <!-- Frequency -->
                <div class="col-span-2">
                  <span class="text-sm text-gray-900">
                    <%= slot.frequency_minutes %> min slots
                  </span>
                  <div class="text-xs text-gray-500">
                    (~<%= ((slot.end_time - slot.start_time) / 60 / slot.frequency_minutes).floor %> slots)
                  </div>
                </div>

                <!-- Status -->
                <div class="col-span-2">
                  <% if slot.is_open %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      Open
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                      </svg>
                      Closed
                    </span>
                  <% end %>

                  <!-- Past indicator -->
                  <% if slot.end_time < Time.current %>
                    <div class="text-xs text-gray-500 mt-1">
                      (Past)
                    </div>
                  <% elsif slot.start_time <= Time.current && slot.end_time >= Time.current %>
                    <div class="text-xs text-blue-600 mt-1">
                      (Active now)
                    </div>
                  <% end %>
                </div>

                <!-- Actions -->
                <div class="col-span-3 flex justify-end gap-2">
                  <%= link_to "Edit", edit_doctors_appointment_slot_path(slot), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>

                  <%= button_to "Delete",
                      doctors_appointment_slot_path(slot),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this availability slot?" },
                      class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
          <%= paginate @appointment_slots %>
        </div>
      <% else %>
        <div class="p-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No availability slots</h3>
          <p class="mt-1 text-sm text-gray-500">
            Get started by creating your first availability slot. Patients will be able to book appointments during these time slots.
          </p>
          <div class="mt-6">
            <%= link_to "Create Availability Slot", new_doctors_appointment_slot_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Help Text -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-blue-800">About Availability Slots</h3>
          <div class="mt-2 text-sm text-blue-700">
            <ul class="list-disc pl-5 space-y-1">
              <li>Create availability slots to define when patients can book appointments with you.</li>
              <li>Each slot is divided into appointment windows based on the frequency you set (e.g., 30-minute intervals).</li>
              <li>Mark slots as "Open" to allow bookings, or "Closed" to temporarily disable them.</li>
              <li>You can edit or delete future slots, but past appointments remain in your history.</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
