<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Find a Doctor</h1>
      <p class="text-gray-600 mt-2">Browse our verified medical professionals</p>
    </div>

    <!-- Filters -->
    <%= form_with url: doctors_path, method: :get, class: "bg-white p-6 rounded-lg shadow-sm mb-8" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Doctor Name Autocomplete -->
        <div class="relative" data-controller="doctor-autocomplete" data-action="click@window->doctor-autocomplete#clickOutside">
          <%= f.label :search, "Search by name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :search, 
              value: params[:search], 
              class: "w-full rounded-lg border-gray-300", 
              placeholder: "Doctor name...",
              autocomplete: "off",
              data: { 
                doctor_autocomplete_target: "input",
                action: "input->doctor-autocomplete#search keydown->doctor-autocomplete#handleKeydown"
              } %>
          <div data-doctor-autocomplete-target="results" class="hidden absolute z-10 w-full mt-1 bg-white border border-gray-200 rounded-lg shadow-lg max-h-60 overflow-y-auto"></div>
        </div>

        <!-- Specialization Autocomplete -->
        <div class="relative" data-controller="specialization-search" data-action="click@window->specialization-search#clickOutside">
          <%= f.label :specialization, "Specialization", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :specialization, 
              value: params[:specialization], 
              class: "w-full rounded-lg border-gray-300", 
              placeholder: "e.g. Cardiology...",
              autocomplete: "off",
              data: { 
                specialization_search_target: "input",
                action: "input->specialization-search#search keydown->specialization-search#handleKeydown"
              } %>
          <div data-specialization-search-target="results" class="hidden absolute z-10 w-full mt-1 bg-white border border-gray-200 rounded-lg shadow-lg max-h-60 overflow-y-auto"></div>
        </div>

        <div class="flex items-end">
          <%= f.submit "Search", class: "w-full px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700" %>
        </div>
      </div>
    <% end %>

    <!-- Doctors Grid -->
    <% if @doctors.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @doctors.each do |doctor| %>
          <%= link_to doctor_path(doctor), class: "block bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow overflow-hidden" do %>
            <div class="p-6">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <% if doctor.profile_photo.attached? %>
                    <%= image_tag doctor.profile_photo, class: "h-20 w-20 rounded-full object-cover border-2 border-primary-100", alt: doctor.full_name %>
                  <% else %>
                    <div class="h-20 w-20 rounded-full bg-primary-100 flex items-center justify-center border-2 border-primary-200">
                      <svg class="h-10 w-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                  <% end %>
                </div>

                <div class="flex-1 min-w-0">
                  <h3 class="text-lg font-semibold text-gray-900 truncate"><%= doctor.full_name %></h3>
                  <p class="text-sm text-primary-600 mt-1"><%= doctor.specialization %></p>

                  <% if doctor.years_of_experience.present? %>
                    <p class="text-xs text-gray-600 mt-1"><%= doctor.years_of_experience %> years experience</p>
                  <% end %>

                  <!-- Rating -->
                  <% if doctor.total_reviews > 0 %>
                    <div class="flex items-center gap-2 mt-2">
                      <div class="flex">
                        <% (1..5).each do |i| %>
                          <svg class="h-4 w-4 <%= i <= doctor.average_rating.round ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                          </svg>
                        <% end %>
                      </div>
                      <span class="text-xs text-gray-600"><%= doctor.average_rating %> (<%= pluralize(doctor.total_reviews, 'review') %>)</span>
                    </div>
                  <% else %>
                    <p class="text-xs text-gray-500 mt-2">No reviews yet</p>
                  <% end %>

                  <!-- Patient Count (based on completed appointments) -->
                  <%
                    patient_count = doctor.doctor_appointments.where(status: 'completed').distinct.count(:patient_id)
                  %>
                  <% if patient_count > 0 %>
                    <p class="text-xs text-gray-600 mt-1"><%= pluralize(patient_count, 'patient') %> treated</p>
                  <% end %>
                </div>
              </div>

              <% if doctor.address.present? || doctor.location_city.present? %>
                <div class="flex items-center gap-2 mt-4 text-sm text-gray-600">
                  <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span class="truncate"><%= doctor.location_city || doctor.address %></span>
                </div>
              <% end %>

              <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between">
                <div>
                  <p class="text-xs text-gray-500">Consultation Fee</p>
                  <p class="text-sm font-semibold text-gray-900">â‚¹<%= doctor.consultation_fee_initial %></p>
                </div>
                <div class="px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg">
                  View Profile
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="mt-8">
        <%= paginate @doctors %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <p class="mt-4 text-gray-600">No doctors found. Try adjusting your search.</p>
      </div>
    <% end %>
  </div>
</div>
