<div class="min-h-screen bg-gray-50">
  <!-- Doctor Profile Header -->
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-col md:flex-row gap-6 items-start">
        <!-- Doctor Photo -->
        <div class="flex-shrink-0">
          <% if @doctor.profile_photo.attached? %>
            <%= image_tag @doctor.profile_photo, class: "h-32 w-32 rounded-full object-cover border-4 border-primary-100", alt: @doctor.full_name %>
          <% else %>
            <div class="h-32 w-32 rounded-full bg-primary-100 flex items-center justify-center border-4 border-primary-200">
              <svg class="h-16 w-16 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
          <% end %>
        </div>

        <!-- Doctor Info -->
        <div class="flex-1">
          <div class="flex items-start justify-between">
            <div>
              <h1 class="text-3xl font-bold text-gray-900"><%= @doctor.full_name %></h1>
              <p class="text-lg text-primary-600 mt-1"><%= @doctor.specialization %></p>

              <div class="mt-4 flex flex-wrap gap-4 text-sm text-gray-600">
                <div class="flex items-center">
                  <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <%= @doctor.email %>
                </div>

                <% if @doctor.phone_number.present? %>
                  <div class="flex items-center">
                    <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    <%= @doctor.phone_number %>
                  </div>
                <% end %>

                <% if @doctor.address.present? %>
                  <div class="flex items-center">
                    <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <%= @doctor.address %>
                  </div>
                <% end %>

                <% if @distance %>
                  <div class="flex items-center text-primary-600 font-medium">
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                    </svg>
                    <%= number_to_human(@distance, precision: 1, units: { unit: "km" }) %> away
                  </div>
                <% end %>
              </div>
            </div>

            <!-- QR Code Link -->
            <% if logged_in? && current_user == @doctor %>
              <%= link_to doctors_qr_code_path, class: "inline-flex items-center px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors" do %>
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
                </svg>
                View QR Code
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column - Calendar and Availability -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Availability Calendar -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Availability Calendar</h2>

          <div class="mb-4 flex gap-4 text-sm">
            <div class="flex items-center">
              <div class="w-4 h-4 rounded bg-green-500 mr-2"></div>
              <span class="text-gray-600">Available</span>
            </div>
            <div class="flex items-center">
              <div class="w-4 h-4 rounded bg-gray-300 mr-2"></div>
              <span class="text-gray-600">Weekend/No slots</span>
            </div>
            <div class="flex items-center">
              <div class="w-4 h-4 rounded bg-red-500 mr-2"></div>
              <span class="text-gray-600">Unavailable</span>
            </div>
          </div>

          <div class="calendar-grid" data-controller="availability-calendar">
            <% current_month = nil %>
            <% @availability_calendar.each do |date, status| %>
              <% if current_month != date.strftime("%B %Y") %>
                <% current_month = date.strftime("%B %Y") %>
                <div class="col-span-7 mt-6 mb-3">
                  <h3 class="text-lg font-semibold text-gray-900"><%= current_month %></h3>
                  <div class="grid grid-cols-7 gap-2 mt-2 text-xs font-medium text-gray-500 text-center">
                    <div>Sun</div>
                    <div>Mon</div>
                    <div>Tue</div>
                    <div>Wed</div>
                    <div>Thu</div>
                    <div>Fri</div>
                    <div>Sat</div>
                  </div>
                </div>

                <!-- Add empty cells for days before month starts -->
                <% (date.beginning_of_month.wday).times do %>
                  <div class="aspect-square"></div>
                <% end if date.day == 1 %>
              <% end %>

              <%
                bg_class = if status[:unavailable]
                  "bg-red-500 text-white"
                elsif status[:available]
                  "bg-green-500 text-white cursor-pointer hover:bg-green-600"
                else
                  "bg-gray-200 text-gray-500"
                end
              %>

              <div class="aspect-square flex items-center justify-center rounded <%= bg_class %> text-sm font-medium transition-colors"
                   data-date="<%= date.iso8601 %>"
                   data-available="<%= status[:available] %>"
                   data-action="<%= 'click->availability-calendar#selectDate' if status[:available] %>">
                <%= date.day %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Available Slots -->
        <% if @available_slots.any? %>
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Upcoming Available Slots</h2>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3">
              <% @available_slots.each do |slot| %>
                <div class="border border-gray-200 rounded-lg p-3 hover:border-primary-500 transition-colors">
                  <div class="text-xs text-gray-500"><%= slot[:start].strftime("%b %d") %></div>
                  <div class="text-sm font-semibold text-gray-900"><%= slot[:start].strftime("%I:%M %p") %></div>
                  <% if current_patient? %>
                    <%= link_to "Book", new_appointment_path(doctor_id: @doctor.id, slot_start: slot[:start]),
                        class: "mt-2 block text-center text-xs bg-primary-600 text-white rounded py-1 hover:bg-primary-700" %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Right Column - Awards and Certificates -->
      <div class="space-y-6">
        <!-- Medical Certificate -->
        <% if @doctor.medical_certificate.attached? %>
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Medical Certificate</h3>
            <%= image_tag @doctor.medical_certificate, class: "w-full rounded-lg border border-gray-200", alt: "Medical Certificate" %>
          </div>
        <% end %>

        <!-- Awards -->
        <% if @awards.any? %>
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Awards & Recognitions</h3>
            <div class="space-y-4">
              <% @awards.each do |award| %>
                <div class="border-l-4 border-primary-500 pl-4 py-2">
                  <h4 class="font-semibold text-gray-900"><%= award.title %></h4>
                  <% if award.issuing_organization.present? %>
                    <p class="text-sm text-gray-600"><%= award.issuing_organization %></p>
                  <% end %>
                  <% if award.date_received.present? %>
                    <p class="text-xs text-gray-500 mt-1"><%= award.date_received.strftime("%B %Y") %></p>
                  <% end %>
                  <% if award.description.present? %>
                    <p class="text-sm text-gray-700 mt-2"><%= award.description %></p>
                  <% end %>
                  <% if award.certificate_image.attached? %>
                    <%= image_tag award.certificate_image, class: "mt-3 w-full rounded border border-gray-200", alt: award.title %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Unavailable Dates -->
        <% if logged_in? && current_user == @doctor && @unavailable_dates.any? %>
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Upcoming Unavailable Dates</h3>
            <div class="space-y-2">
              <% @unavailable_dates.each do |unavail| %>
                <div class="flex items-start gap-3 p-3 bg-red-50 rounded-lg">
                  <svg class="h-5 w-5 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                  <div class="flex-1">
                    <div class="text-sm font-semibold text-gray-900"><%= unavail.date.strftime("%b %d, %Y") %></div>
                    <% if unavail.reason.present? %>
                      <div class="text-xs text-gray-600 mt-1"><%= unavail.reason %></div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Reviews & Testimonials -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center justify-between mb-6">
            <div>
              <h3 class="text-xl font-bold text-gray-900">Patient Reviews</h3>
              <% if @total_reviews > 0 %>
                <div class="flex items-center gap-2 mt-2">
                  <div class="flex">
                    <% (1..5).each do |i| %>
                      <svg class="h-5 w-5 <%= i <= @average_rating.round ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                    <% end %>
                  </div>
                  <span class="text-sm font-medium text-gray-700"><%= @average_rating %> (<%= pluralize(@total_reviews, 'review') %>)</span>
                </div>
              <% end %>
            </div>

            <% if current_patient? && !@user_has_reviewed %>
              <button type="button" onclick="document.getElementById('review-form').classList.toggle('hidden')" class="px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg hover:bg-primary-700">
                Write Review
              </button>
            <% end %>
          </div>

          <!-- Review Form -->
          <% if current_patient? && !@user_has_reviewed %>
            <div id="review-form" class="hidden mb-6 p-4 bg-gray-50 rounded-lg border border-gray-200">
              <%= form_with model: Review.new, url: doctor_reviews_path(@doctor), class: "space-y-4" do |f| %>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Rating</label>
                  <div class="flex gap-2" data-controller="star-rating">
                    <% (1..5).each do |i| %>
                      <%= f.radio_button :rating, i, class: "sr-only", data: { action: "change->star-rating#update" } %>
                      <label for="review_rating_<%= i %>" class="cursor-pointer">
                        <svg class="h-8 w-8 text-gray-300 hover:text-yellow-400 transition-colors star-icon" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      </label>
                    <% end %>
                  </div>
                </div>

                <div>
                  <%= f.label :comment, "Your Review", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.text_area :comment, rows: 4, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500", placeholder: "Share your experience with this doctor..." %>
                </div>

                <div class="flex gap-2">
                  <%= f.submit "Submit Review", class: "px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700" %>
                  <button type="button" onclick="document.getElementById('review-form').classList.add('hidden')" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300">
                    Cancel
                  </button>
                </div>
              <% end %>
            </div>
          <% elsif current_patient? && @user_has_reviewed %>
            <div class="mb-6 p-4 bg-primary-50 rounded-lg border border-primary-200 text-sm text-primary-800">
              You have already reviewed this doctor. Thank you for your feedback!
            </div>
          <% end %>

          <!-- Reviews List -->
          <% if @reviews.any? %>
            <div class="space-y-4">
              <% @reviews.each do |review| %>
                <div class="border-b border-gray-200 pb-4 last:border-0">
                  <div class="flex items-start justify-between">
                    <div class="flex gap-3">
                      <div class="flex-shrink-0">
                        <% if review.patient.avatar.attached? %>
                          <%= image_tag review.patient.avatar, class: "h-10 w-10 rounded-full object-cover", alt: review.patient.full_name %>
                        <% else %>
                          <div class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center">
                            <span class="text-primary-600 font-semibold"><%= review.patient.full_name.first %></span>
                          </div>
                        <% end %>
                      </div>
                      <div>
                        <p class="font-semibold text-gray-900"><%= review.patient.full_name %></p>
                        <div class="flex mt-1">
                          <% (1..5).each do |i| %>
                            <svg class="h-4 w-4 <%= i <= review.rating ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                          <% end %>
                        </div>
                      </div>
                    </div>
                    <p class="text-xs text-gray-500"><%= time_ago_in_words(review.created_at) %> ago</p>
                  </div>
                  <% if review.comment.present? %>
                    <p class="mt-3 text-sm text-gray-700"><%= review.comment %></p>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-center text-gray-500 py-8">No reviews yet. Be the first to review!</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 0.5rem;
  }
</style>
