<%# Turbo Stream response for doctor reviewing test result %>

<turbo-stream action="replace" target="test_result_<%= @test_result_upload.id %>">
  <template>
    <div id="test_result_<%= @test_result_upload.id %>" class="border border-green-200 rounded-lg p-4 bg-green-50">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center space-x-3">
          <div class="h-10 w-10 bg-green-600 rounded-lg flex items-center justify-center">
            <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-gray-900">Test Result - Reviewed</h3>
            <p class="text-sm text-gray-600">Reviewed by Dr. <%= @test_result_upload.reviewed_by_doctor.full_name %></p>
          </div>
        </div>
        <span class="badge badge-success">Reviewed</span>
      </div>

      <% if @test_result_upload.doctor_comments.present? %>
        <div class="bg-white border border-gray-200 rounded p-3 mt-3">
          <p class="text-sm font-medium text-gray-700 mb-1">Doctor's Comments:</p>
          <p class="text-sm text-gray-900"><%= @test_result_upload.doctor_comments %></p>
        </div>
      <% end %>

      <%= link_to "View Details", test_result_upload_path(@test_result_upload), class: "btn btn-sm btn-primary mt-3" %>
    </div>
  </template>
</turbo-stream>

<turbo-stream action="prepend" target="flash-messages">
  <template>
    <div class="bg-green-50 text-green-800 border border-green-200 rounded-lg p-4 mb-4" role="alert">
      <div class="flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        <span>Review submitted! Patient has been notified.</span>
      </div>
    </div>
  </template>
</turbo-stream>
