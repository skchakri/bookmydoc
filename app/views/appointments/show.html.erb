<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to appointments_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Appointments
      <% end %>
    </div>

    <!-- Main Appointment Card -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-6">
      <!-- Header with Status -->
      <div class="bg-gradient-to-r from-primary-600 to-primary-700 px-6 py-6">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <h1 class="text-2xl font-bold text-white">Appointment Details</h1>
            <p class="text-primary-100 text-sm mt-2">
              <%= @appointment.scheduled_start.strftime("%A, %B %d, %Y") %>
            </p>
          </div>
          <div class="flex flex-col items-end gap-2">
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium
              <%= case @appointment.status
                  when 'pending_payment' then 'bg-yellow-100 text-yellow-800'
                  when 'confirmed' then 'bg-blue-100 text-blue-800'
                  when 'completed' then 'bg-green-100 text-green-800'
                  when 'cancelled' then 'bg-red-100 text-red-800'
                  when 'moved_by_doctor' then 'bg-purple-100 text-purple-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%= @appointment.status.humanize %>
            </span>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium
              <%= case @appointment.payment_status
                  when 'unpaid' then 'bg-red-100 text-red-800'
                  when 'partial_paid' then 'bg-yellow-100 text-yellow-800'
                  when 'paid' then 'bg-green-100 text-green-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              Payment: <%= @appointment.payment_status.humanize %>
            </span>
          </div>
        </div>
      </div>

      <!-- Rescheduled Notice -->
      <% if @appointment.moved_by_doctor? && @appointment.moved_from.present? %>
        <div class="bg-orange-50 border-l-4 border-orange-400 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-orange-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-orange-700">
                <strong>Rescheduled:</strong> This appointment was moved from <%= @appointment.moved_from.strftime('%B %d, %Y at %I:%M %p') %>
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <div class="p-6">
        <!-- Doctor/Patient Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <!-- Doctor Section -->
          <div class="border-l-4 border-primary-500 bg-primary-50 rounded-lg p-5">
            <div class="flex items-start gap-4">
              <% if @appointment.doctor.avatar.attached? %>
                <%= image_tag @appointment.doctor.avatar, class: "w-16 h-16 rounded-full object-cover border-2 border-white shadow-sm" %>
              <% else %>
                <div class="w-16 h-16 bg-primary-200 rounded-full flex items-center justify-center border-2 border-white shadow-sm">
                  <span class="text-2xl font-bold text-primary-700"><%= @appointment.doctor.full_name[0] %></span>
                </div>
              <% end %>
              <div class="flex-1">
                <h3 class="text-sm font-medium text-gray-600 mb-1">Doctor</h3>
                <p class="text-lg font-bold text-gray-900">Dr. <%= @appointment.doctor.full_name %></p>
                <p class="text-sm text-gray-700"><%= @appointment.doctor.specialization %></p>
                <% if @appointment.doctor.phone_number.present? %>
                  <p class="text-sm text-gray-600 mt-2"><%= @appointment.doctor.phone_number %></p>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Patient Section -->
          <div class="border-l-4 border-blue-500 bg-blue-50 rounded-lg p-5">
            <div class="flex items-start gap-4">
              <% if @appointment.patient.avatar.attached? %>
                <%= image_tag @appointment.patient.avatar, class: "w-16 h-16 rounded-full object-cover border-2 border-white shadow-sm" %>
              <% else %>
                <div class="w-16 h-16 bg-blue-200 rounded-full flex items-center justify-center border-2 border-white shadow-sm">
                  <span class="text-2xl font-bold text-blue-700"><%= @appointment.patient.full_name[0] %></span>
                </div>
              <% end %>
              <div class="flex-1">
                <h3 class="text-sm font-medium text-gray-600 mb-1">Patient</h3>
                <p class="text-lg font-bold text-gray-900"><%= @appointment.patient.full_name %></p>
                <% if @appointment.patient.phone_number.present? %>
                  <p class="text-sm text-gray-600 mt-2"><%= @appointment.patient.phone_number %></p>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Appointment Time Details -->
        <div class="bg-gray-50 rounded-lg p-5 mb-6">
          <h3 class="text-sm font-semibold text-gray-700 mb-4">Appointment Schedule</h3>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="flex items-center gap-3">
              <div class="flex-shrink-0">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <p class="text-xs text-gray-500">Date</p>
                <p class="text-sm font-semibold text-gray-900"><%= @appointment.scheduled_start.strftime("%b %d, %Y") %></p>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="flex-shrink-0">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-xs text-gray-500">Time</p>
                <p class="text-sm font-semibold text-gray-900">
                  <%= @appointment.scheduled_start.strftime("%I:%M %p") %> - <%= @appointment.scheduled_end.strftime("%I:%M %p") %>
                </p>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="flex-shrink-0">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div>
                <p class="text-xs text-gray-500">Duration</p>
                <p class="text-sm font-semibold text-gray-900"><%= @appointment.duration_minutes %> minutes</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Fees Information -->
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 border border-green-200 rounded-lg p-5 mb-6">
          <h3 class="text-sm font-semibold text-gray-700 mb-3">Consultation Fees</h3>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div>
              <p class="text-xs text-gray-600">Initial Fee</p>
              <p class="text-lg font-bold text-gray-900">₹<%= number_with_delimiter(@appointment.initial_fee_amount) %></p>
            </div>
            <div>
              <p class="text-xs text-gray-600">Remaining Fee</p>
              <p class="text-lg font-bold text-gray-900">₹<%= number_with_delimiter(@appointment.remaining_fee_amount) %></p>
            </div>
            <div>
              <p class="text-xs text-gray-600">Total Fee</p>
              <p class="text-xl font-bold text-green-700">₹<%= number_with_delimiter(@appointment.initial_fee_amount + @appointment.remaining_fee_amount) %></p>
            </div>
          </div>
        </div>

        <!-- Patient Notes -->
        <% if @appointment.patient_notes.present? %>
          <div class="mb-6">
            <h3 class="text-sm font-semibold text-gray-700 mb-2">Patient Notes</h3>
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
              <p class="text-gray-900 whitespace-pre-wrap"><%= @appointment.patient_notes %></p>
            </div>
          </div>
        <% end %>

        <!-- Doctor Notes -->
        <% if @appointment.doctor_notes.present? %>
          <div class="mb-6">
            <h3 class="text-sm font-semibold text-gray-700 mb-2">Doctor's Notes</h3>
            <div class="bg-green-50 border border-green-200 rounded-lg p-4">
              <p class="text-gray-900 whitespace-pre-wrap"><%= @appointment.doctor_notes %></p>
            </div>
          </div>
        <% end %>

        <!-- Audio Recording -->
        <% if @appointment.audio_recording_url.present? %>
          <div class="mb-6">
            <h3 class="text-sm font-semibold text-gray-700 mb-2">Audio Recording</h3>
            <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
              <audio controls class="w-full">
                <source src="<%= @appointment.audio_recording_url %>" type="audio/mpeg">
                Your browser does not support the audio element.
              </audio>
            </div>
          </div>
        <% end %>

        <!-- Screenshot Attachment -->
        <% if @appointment.screenshot_attachment.attached? %>
          <div class="mb-6">
            <h3 class="text-sm font-semibold text-gray-700 mb-2">Screenshot</h3>
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
              <%= image_tag @appointment.screenshot_attachment, class: "max-w-full h-auto rounded-lg" %>
              <div class="mt-3">
                <%= link_to "Download Screenshot", rails_blob_path(@appointment.screenshot_attachment, disposition: "attachment"),
                    class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Action Buttons -->
        <div class="flex flex-wrap gap-3 pt-4 border-t border-gray-200">
          <% if @appointment.pending_payment? && current_patient? %>
            <%= link_to "Complete Payment", payment_confirm_appointment_path(@appointment),
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
          <% end %>

          <% if current_doctor? && @appointment.confirmed? %>
            <%= button_to "Mark as Completed",
                appointment_path(@appointment, action_type: 'complete'),
                method: :patch,
                data: { turbo_confirm: "Mark this appointment as completed?" },
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
          <% end %>

          <% if (current_doctor? || current_patient?) && !@appointment.completed? && !@appointment.cancelled? %>
            <%= button_to "Cancel Appointment",
                appointment_path(@appointment, action_type: 'cancel'),
                method: :patch,
                data: { turbo_confirm: "Are you sure you want to cancel this appointment?" },
                class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Test Orders Section -->
    <% if @appointment.test_orders.any? %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
        <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Test Orders</h2>
        </div>
        <div class="divide-y divide-gray-200">
          <% @appointment.test_orders.each do |test_order| %>
            <div class="p-5 hover:bg-gray-50 transition-colors">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h3 class="text-sm font-medium text-gray-900 mb-2"><%= test_order.description %></h3>
                  <% if test_order.message_to_patient.present? %>
                    <p class="text-sm text-gray-600 mb-2"><%= truncate(test_order.message_to_patient, length: 150) %></p>
                  <% end %>
                  <div class="flex items-center gap-3 text-xs text-gray-500">
                    <span>Ordered on <%= test_order.created_at.strftime("%b %d, %Y") %></span>
                    <% if test_order.test_result_uploads.any? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <%= pluralize(test_order.test_result_uploads.count, 'result') %> uploaded
                      </span>
                    <% end %>
                  </div>
                </div>
                <%= link_to "View Details", test_order_path(test_order),
                    class: "ml-4 inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
