<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Appointments</h1>
      <p class="mt-2 text-gray-600">Manage and view your appointments</p>
    </div>

    <!-- Filters -->
    <div class="mb-6 flex gap-4">
      <%= link_to "All", appointments_path, class: "px-4 py-2 rounded-lg #{params[:filter].blank? ? 'bg-primary-600 text-white' : 'bg-white text-gray-700 border border-gray-300'}" %>
      <%= link_to "Today", appointments_path(filter: 'today'), class: "px-4 py-2 rounded-lg #{params[:filter] == 'today' ? 'bg-primary-600 text-white' : 'bg-white text-gray-700 border border-gray-300'}" %>
      <%= link_to "Upcoming", appointments_path(filter: 'upcoming'), class: "px-4 py-2 rounded-lg #{params[:filter] == 'upcoming' ? 'bg-primary-600 text-white' : 'bg-white text-gray-700 border border-gray-300'}" %>
      <%= link_to "Past", appointments_path(filter: 'past'), class: "px-4 py-2 rounded-lg #{params[:filter] == 'past' ? 'bg-primary-600 text-white' : 'bg-white text-gray-700 border border-gray-300'}" %>
    </div>

    <!-- Appointments List -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <% if @appointments.any? %>
        <div class="divide-y divide-gray-200">
          <% @appointments.each do |appointment| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <!-- Patient/Doctor Info -->
                  <div class="flex items-center gap-4 mb-2">
                    <% if current_doctor? %>
                      <h3 class="text-lg font-semibold text-gray-900">
                        <%= appointment.patient.full_name %>
                      </h3>
                      <span class="text-sm text-gray-500">Patient</span>
                    <% else %>
                      <h3 class="text-lg font-semibold text-gray-900">
                        Dr. <%= appointment.doctor.full_name %>
                      </h3>
                      <span class="text-sm text-gray-500"><%= appointment.doctor.specialization %></span>
                    <% end %>
                  </div>

                  <!-- Date & Time -->
                  <div class="flex items-center gap-4 text-sm text-gray-600 mb-2">
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      <%= appointment.scheduled_start.strftime("%b %d, %Y") %>
                    </div>
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <%= appointment.scheduled_start.strftime("%I:%M %p") %> - <%= appointment.scheduled_end.strftime("%I:%M %p") %>
                    </div>
                    <div>
                      (<%= appointment.duration_minutes %> min)
                    </div>
                  </div>

                  <!-- Status -->
                  <div class="flex items-center gap-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= case appointment.status
                          when 'pending_payment' then 'bg-yellow-100 text-yellow-800'
                          when 'confirmed' then 'bg-blue-100 text-blue-800'
                          when 'completed' then 'bg-green-100 text-green-800'
                          when 'cancelled' then 'bg-red-100 text-red-800'
                          when 'moved_by_doctor' then 'bg-purple-100 text-purple-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= appointment.status.humanize %>
                    </span>

                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= case appointment.payment_status
                          when 'unpaid' then 'bg-red-100 text-red-800'
                          when 'partial_paid' then 'bg-yellow-100 text-yellow-800'
                          when 'paid' then 'bg-green-100 text-green-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      Payment: <%= appointment.payment_status.humanize %>
                    </span>
                  </div>

                  <!-- Notes Preview -->
                  <% if current_doctor? && appointment.patient_notes.present? %>
                    <div class="mt-3 text-sm text-gray-600">
                      <strong>Patient notes:</strong> <%= truncate(appointment.patient_notes, length: 100) %>
                    </div>
                  <% elsif current_patient? && appointment.doctor_notes.present? %>
                    <div class="mt-3 text-sm text-gray-600">
                      <strong>Doctor notes:</strong> <%= truncate(appointment.doctor_notes, length: 100) %>
                    </div>
                  <% end %>
                </div>

                <!-- Actions -->
                <div class="ml-4 flex-shrink-0">
                  <%= link_to "View Details", appointment_path(appointment), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
          <%= paginate @appointments %>
        </div>
      <% else %>
        <div class="p-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No appointments</h3>
          <p class="mt-1 text-sm text-gray-500">
            <% if params[:filter].present? %>
              No <%= params[:filter] %> appointments found.
            <% else %>
              You don't have any appointments yet.
            <% end %>
          </p>
          <% if current_patient? %>
            <div class="mt-6">
              <%= link_to "Find a Doctor", doctors_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
