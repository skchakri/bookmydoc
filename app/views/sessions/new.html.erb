<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Sign in to your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Or
        <%= link_to "create a new account", signup_path, class: "font-medium text-primary-600 hover:text-primary-500" %>
      </p>
    </div>

    <%= form_with url: login_path, method: :post, class: "mt-8 space-y-6" do |f| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= label_tag :phone_number, "Phone Number", class: "sr-only" %>
          <%= phone_field_tag :phone_number, nil, class: "input rounded-t-md", placeholder: "Phone number (+91xxxxxxxxxx)", required: true, autofocus: true %>
        </div>
        <div>
          <%= label_tag :password, "Password", class: "sr-only" %>
          <%= password_field_tag :password, nil, class: "input rounded-b-md", placeholder: "Password", required: true %>
        </div>
      </div>

      <div>
        <%= button_tag type: "submit", class: "btn btn-primary w-full py-3" do %>
          Sign in
        <% end %>
      </div>
    <% end %>
  </div>
</div>
