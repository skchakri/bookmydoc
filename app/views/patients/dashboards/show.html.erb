<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Welcome back, <%= current_user.full_name %>!</h1>
    <p class="text-gray-600 mt-1">Manage your appointments and health records</p>
  </div>

  <!-- Quick Actions -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <%= link_to new_symptom_report_path, class: "card hover:shadow-lg transition-shadow" do %>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-12 w-12 bg-primary-100 rounded-lg flex items-center justify-center">
            <svg class="h-6 w-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900">Report Symptoms</h3>
          <p class="text-sm text-gray-600">Get AI-powered recommendations</p>
        </div>
      </div>
    <% end %>

    <%= link_to doctors_path, class: "card hover:shadow-lg transition-shadow" do %>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-12 w-12 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900">Find Doctors</h3>
          <p class="text-sm text-gray-600">Search by specialization</p>
        </div>
      </div>
    <% end %>

    <%= link_to new_test_result_upload_path, class: "card hover:shadow-lg transition-shadow" do %>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-12 w-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900">Upload Reports</h3>
          <p class="text-sm text-gray-600">Share test results</p>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Upcoming Appointments -->
  <div class="card mb-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-xl font-bold text-gray-900">Upcoming Appointments</h2>
      <%= link_to "View All", appointments_path, class: "text-primary-600 hover:text-primary-700 text-sm font-medium" %>
    </div>

    <% if @upcoming_appointments.any? %>
      <div class="space-y-4">
        <% @upcoming_appointments.each do |appointment| %>
          <%= link_to appointment_path(appointment), class: "block border border-gray-200 rounded-lg p-4 hover:border-primary-300 transition-colors" do %>
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="h-12 w-12 bg-primary-100 rounded-full flex items-center justify-center">
                  <% if appointment.doctor.avatar.attached? %>
                    <%= image_tag appointment.doctor.avatar, class: "h-12 w-12 rounded-full object-cover" %>
                  <% else %>
                    <span class="text-primary-600 font-semibold"><%= appointment.doctor.full_name[0] %></span>
                  <% end %>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900"><%= appointment.doctor.full_name %></h3>
                  <p class="text-sm text-gray-600"><%= appointment.doctor.specialization %></p>
                  <p class="text-sm text-gray-500">
                    <%= appointment.scheduled_start.strftime('%B %d, %Y at %I:%M %p') %>
                  </p>
                </div>
              </div>
              <span class="badge <%= appointment.status == 'confirmed' ? 'badge-success' : 'badge-warning' %>">
                <%= appointment.status.titleize %>
              </span>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-600 text-center py-8">No upcoming appointments</p>
    <% end %>
  </div>

  <!-- Last Visited Doctor (if exists) -->
  <% if @last_visited_doctor %>
    <div class="card mb-8">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Continue Care</h2>
      <%= link_to doctor_path(@last_visited_doctor), class: "flex items-center space-x-4 p-4 border border-gray-200 rounded-lg hover:border-primary-300" do %>
        <div class="h-16 w-16 bg-primary-100 rounded-full flex items-center justify-center">
          <% if @last_visited_doctor.avatar.attached? %>
            <%= image_tag @last_visited_doctor.avatar, class: "h-16 w-16 rounded-full object-cover" %>
          <% else %>
            <span class="text-2xl text-primary-600 font-semibold"><%= @last_visited_doctor.full_name[0] %></span>
          <% end %>
        </div>
        <div class="flex-1">
          <h3 class="font-semibold text-gray-900"><%= @last_visited_doctor.full_name %></h3>
          <p class="text-sm text-gray-600"><%= @last_visited_doctor.specialization %></p>
          <p class="text-sm text-gray-500">Your last visit was with this doctor</p>
        </div>
        <span class="text-primary-600">Book Again â†’</span>
      <% end %>
    </div>
  <% end %>

  <!-- Recent Test Results -->
  <% if @recent_test_results.any? %>
    <div class="card">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold text-gray-900">Recent Test Results</h2>
      </div>

      <div class="space-y-3">
        <% @recent_test_results.each do |result| %>
          <%= link_to test_result_upload_path(result), class: "block border border-gray-200 rounded-lg p-4 hover:border-primary-300" do %>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="font-medium text-gray-900">Test Result</h3>
                <p class="text-sm text-gray-600"><%= result.created_at.strftime('%B %d, %Y') %></p>
              </div>
              <span class="badge <%= result.reviewed? ? 'badge-success' : 'badge-warning' %>">
                <%= result.reviewed? ? 'Reviewed' : 'Pending Review' %>
              </span>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
