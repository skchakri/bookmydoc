<% unless turbo_native_app? %>
<footer class="bg-white border-t border-gray-200 mt-12">
  <div class="max-w-7xl mx-auto py-6 md:py-8 px-4 sm:px-6 lg:px-8">
    <!-- Mobile: Compact Single Column -->
    <div class="md:hidden">
      <div class="text-center mb-4">
        <h3 class="text-sm font-semibold text-gray-900 mb-2">BookMyDoc</h3>
        <p class="text-xs text-gray-600 mb-3">
          Healthcare at your fingertips
        </p>
      </div>
      <div class="flex justify-center space-x-4 text-xs">
        <%= link_to "Doctors", doctors_path, class: "text-gray-600" %>
        <span class="text-gray-300">|</span>
        <%= link_to "About", "#", class: "text-gray-600" %>
        <span class="text-gray-300">|</span>
        <a href="#" class="text-gray-600">Privacy</a>
        <span class="text-gray-300">|</span>
        <a href="#" class="text-gray-600">Terms</a>
      </div>
      <p class="text-xs text-gray-500 text-center mt-3">
        &copy; <%= Time.current.year %> BookMyDoc
      </p>
    </div>

    <!-- Desktop: Full Footer -->
    <div class="hidden md:block">
      <div class="grid grid-cols-4 gap-8">
        <div>
          <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">About BookMyDoc</h3>
          <p class="text-sm text-gray-600">
            Connecting patients with verified healthcare professionals across India.
          </p>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">For Patients</h3>
          <ul class="space-y-2">
            <li><%= link_to "Find Doctors", doctors_path, class: "text-sm text-gray-600 hover:text-gray-900" %></li>
            <li><%= link_to "Book Appointment", doctors_path, class: "text-sm text-gray-600 hover:text-gray-900" %></li>
            <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900">Health Records</a></li>
          </ul>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">For Doctors</h3>
          <ul class="space-y-2">
            <li><%= link_to "Join BookMyDoc", signup_path(role: 'doctor'), class: "text-sm text-gray-600 hover:text-gray-900" %></li>
            <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900">Features</a></li>
            <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900">Pricing</a></li>
          </ul>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">Legal</h3>
          <ul class="space-y-2">
            <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900">Privacy Policy</a></li>
            <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900">Terms of Service</a></li>
            <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900">Contact Us</a></li>
          </ul>
        </div>
      </div>

      <div class="mt-8 pt-8 border-t border-gray-200">
        <p class="text-sm text-gray-500 text-center">
          &copy; <%= Time.current.year %> BookMyDoc. All rights reserved. Built with Rails 7 + Hotwire.
        </p>
      </div>
    </div>
  </div>
</footer>
<% end %>
