<!-- Desktop Navigation (hidden on mobile, shown on lg+ screens) -->
<nav class="hidden lg:block bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <%= link_to root_path, class: "flex items-center space-x-3" do %>
            <div class="h-10 w-10 bg-primary-600 rounded-lg flex items-center justify-center">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <span class="text-xl font-bold bg-gradient-to-r from-primary-600 to-primary-500 bg-clip-text text-transparent">BookMyDoc</span>
          <% end %>
        </div>

        <% if logged_in? %>
          <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
            <% if current_patient? %>
              <%= link_to "Dashboard", patients_dashboard_path, class: "border-primary-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
              <%= link_to "Find Doctors", doctors_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
              <%= link_to "My Appointments", appointments_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
              <%= link_to "Report Symptoms", new_symptom_report_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
            <% elsif current_doctor? %>
              <%= link_to "Dashboard", doctors_dashboard_path, class: "border-primary-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
              <%= link_to "Appointments", appointments_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
              <%= link_to "Availability", doctors_appointment_slots_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
              <%= link_to "Test Orders", test_orders_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
            <% elsif current_admin? %>
              <%= link_to "Dashboard", admin_dashboard_path, class: "border-primary-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
              <%= link_to "Users", admin_users_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
              <%= link_to "Appointments", admin_appointments_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
              <%= link_to "Audit Logs", admin_audit_logs_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
            <% end %>
          </div>
        <% else %>
          <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
            <%= link_to "Find Doctors", doctors_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
          </div>
        <% end %>
      </div>

      <div class="hidden sm:ml-6 sm:flex sm:items-center">
        <% if logged_in? %>
          <!-- Messages -->
          <%= turbo_stream_from "notifications_#{current_user.id}" %>
          <%= link_to messages_path, class: "relative p-2 rounded-lg text-gray-400 hover:text-primary-600 hover:bg-primary-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors" do %>
            <span class="sr-only">View messages</span>
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            <% if current_user.unread_messages_count > 0 %>
              <span id="unread-messages-count" class="absolute top-0 right-0 inline-flex items-center justify-center px-1.5 py-0.5 text-xs font-bold leading-none text-white transform translate-x-1/2 -translate-y-1/2 bg-red-500 rounded-full"><%= current_user.unread_messages_count %></span>
            <% end %>
          <% end %>

          <!-- Notifications -->
          <div class="relative ml-2" data-controller="notification">
            <button type="button" class="p-2 rounded-lg text-gray-400 hover:text-primary-600 hover:bg-primary-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors" data-action="click->notification#toggle">
              <span class="sr-only">View notifications</span>
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
              <% if current_user.unread_notifications_count > 0 %>
                <span data-notification-target="badge" class="absolute top-1 right-1 block h-2 w-2 rounded-full bg-red-500 ring-2 ring-white"></span>
              <% end %>
            </button>
          </div>

          <!-- Profile dropdown -->
          <div class="ml-3 relative">
            <div>
              <button type="button" class="flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" id="user-menu-button" aria-expanded="false" aria-haspopup="true" data-dropdown-toggle="user-dropdown">
                <span class="sr-only">Open user menu</span>
                <% if current_user.avatar.attached? %>
                  <%= image_tag current_user.avatar, class: "h-8 w-8 rounded-full object-cover" %>
                <% else %>
                  <div class="h-8 w-8 rounded-full bg-primary-600 flex items-center justify-center text-white font-medium">
                    <%= current_user.full_name[0].upcase %>
                  </div>
                <% end %>
              </button>
            </div>

            <div class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-50" id="user-dropdown" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button">
              <div class="px-4 py-2 text-sm text-gray-700 border-b border-gray-100">
                <p class="font-medium"><%= current_user.full_name %></p>
                <p class="text-xs text-gray-500"><%= current_user.role.titleize %></p>
              </div>
              <%= link_to "Notifications", notifications_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" %>
              <%= button_to "Sign out", logout_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" %>
            </div>
          </div>
        <% else %>
          <div class="flex items-center space-x-4">
            <%= link_to "Login", login_path, class: "text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to "Sign up", signup_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>
