<div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-extrabold text-gray-900">
        Create your account
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Already have an account?
        <%= link_to "Sign in", login_path, class: "font-medium text-primary-600 hover:text-primary-500" %>
      </p>
    </div>

    <div class="card">
      <%= form_with model: @user, url: signup_path, method: :post, class: "space-y-6" do |f| %>
        <!-- Role Selection -->
        <div>
          <%= f.label :role, class: "label" %>
          <%= f.select :role, [['Patient', 'patient'], ['Doctor', 'doctor']], { selected: @role }, class: "input", data: { action: "change->form#toggleDoctorFields" } %>
        </div>

        <!-- Basic Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.label :full_name, class: "label" %>
            <%= f.text_field :full_name, class: "input", placeholder: "Full Name", required: true %>
          </div>

          <div>
            <%= f.label :phone_number, class: "label" %>
            <%= f.phone_field :phone_number, class: "input", placeholder: "+91xxxxxxxxxx", required: true %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, class: "input", placeholder: "email@example.com" %>
          </div>

          <div>
            <%= f.label :aadhaar_number, "Aadhaar Number (optional)", class: "label" %>
            <%= f.text_field :aadhaar_number, class: "input", placeholder: "1234-5678-9012" %>
          </div>
        </div>

        <!-- Password -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.label :password, class: "label" %>
            <%= f.password_field :password, class: "input", required: true %>
          </div>

          <div>
            <%= f.label :password_confirmation, class: "label" %>
            <%= f.password_field :password_confirmation, class: "input", required: true %>
          </div>
        </div>

        <!-- Location -->
        <div data-controller="address-autocomplete" class="space-y-4">
          <div class="relative">
            <%= f.label :address, "Address", class: "label" %>
            <%= f.text_field :address,
                class: "input",
                placeholder: "Start typing your address...",
                autocomplete: "off",
                data: {
                  address_autocomplete_target: "input",
                  action: "input->address-autocomplete#search click@window->address-autocomplete#handleClickOutside"
                } %>

            <!-- Suggestions dropdown -->
            <div data-address-autocomplete-target="suggestions"
                 class="hidden absolute z-10 mt-1 w-full bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-auto">
              <!-- Suggestions will be populated here -->
            </div>

            <p class="mt-1 text-xs text-gray-500">
              <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Start typing your address and select from suggestions. Coordinates will be filled automatically.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= f.label :location_city, class: "label" %>
              <%= f.text_field :location_city,
                  class: "input",
                  placeholder: "City (auto-filled)",
                  data: { address_autocomplete_target: "city" } %>
            </div>

            <div>
              <%= f.label :location_pin_code, "PIN Code", class: "label" %>
              <%= f.text_field :location_pin_code,
                  class: "input",
                  placeholder: "PIN Code (auto-filled)",
                  data: { address_autocomplete_target: "pincode" } %>
            </div>
          </div>

          <!-- Hidden fields for coordinates -->
          <%= f.hidden_field :latitude, data: { address_autocomplete_target: "latitude" } %>
          <%= f.hidden_field :longitude, data: { address_autocomplete_target: "longitude" } %>

          <div class="text-xs text-gray-500 bg-gray-50 p-3 rounded-lg">
            <strong>Note:</strong> We use your location to show nearby doctors. Your exact coordinates are stored securely and only used for distance calculations.
          </div>
        </div>

        <!-- Doctor-specific fields (show only if role is doctor) -->
        <div id="doctor-fields" class="<%= 'hidden' unless @role == 'doctor' %> space-y-4 border-t pt-4">
          <h3 class="text-lg font-semibold text-gray-900">Doctor Information</h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div data-controller="specialization-autocomplete" class="relative">
              <%= f.label :specialization, class: "label" %>
              <%= f.text_field :specialization,
                  class: "input",
                  placeholder: "Start typing specialization...",
                  autocomplete: "off",
                  data: {
                    specialization_autocomplete_target: "input",
                    action: "input->specialization-autocomplete#search keydown->specialization-autocomplete#handleKeydown click@window->specialization-autocomplete#handleClickOutside"
                  } %>

              <!-- Suggestions dropdown -->
              <div data-specialization-autocomplete-target="suggestions"
                   class="hidden absolute z-10 mt-1 w-full bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-auto">
                <!-- Suggestions will be populated here -->
              </div>

              <p class="mt-1 text-xs text-gray-500">
                <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Type to search from 90+ medical specializations
              </p>
            </div>

            <div>
              <%= f.label :medical_registration_number, class: "label" %>
              <%= f.text_field :medical_registration_number, class: "input", placeholder: "Medical Reg. Number" %>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <%= f.label :years_of_experience, "Years of Experience", class: "label" %>
              <%= f.number_field :years_of_experience, class: "input", placeholder: "5", min: 0 %>
            </div>

            <div>
              <%= f.label :consultation_fee_initial, "Initial Consultation Fee (INR)", class: "label" %>
              <%= f.number_field :consultation_fee_initial, class: "input", placeholder: "500" %>
            </div>

            <div>
              <%= f.label :consultation_fee_due, "Fee Due at Visit (INR)", class: "label" %>
              <%= f.number_field :consultation_fee_due, class: "input", placeholder: "1500" %>
            </div>
          </div>

          <div>
            <%= f.label :clinic_address, class: "label" %>
            <%= f.text_area :clinic_address, class: "input", rows: 3, placeholder: "Clinic address" %>
          </div>

          <div>
            <%= f.label :about_bio, "About / Bio", class: "label" %>
            <%= f.text_area :about_bio, class: "input", rows: 4, placeholder: "Brief introduction about yourself..." %>
          </div>

          <!-- File Uploads -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pt-4 border-t">
            <div>
              <%= f.label :profile_photo, "Profile Photo (Optional)", class: "label" %>
              <%= f.file_field :profile_photo,
                  accept: "image/*",
                  class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-primary-50 file:text-primary-700 hover:file:bg-primary-100" %>
              <p class="mt-1 text-xs text-gray-500">
                For QR code branding. JPG, PNG max 5MB
              </p>
            </div>

            <div>
              <%= f.label :medical_certificate, "Medical Certificate (Optional)", class: "label" %>
              <%= f.file_field :medical_certificate,
                  accept: "image/*,.pdf",
                  class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-primary-50 file:text-primary-700 hover:file:bg-primary-100" %>
              <p class="mt-1 text-xs text-gray-500">
                Medical degree/license. PDF, JPG, PNG max 10MB
              </p>
            </div>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <%= button_tag type: "submit", class: "btn btn-primary px-8 py-3" do %>
            Create Account
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
