<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
      <div class="grid grid-cols-1 md:grid-cols-3 h-[calc(100vh-12rem)]">
        <!-- Conversations List -->
        <div class="border-r border-gray-200 overflow-y-auto">
          <div class="p-4 bg-gray-50 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Messages</h2>
          </div>

          <div class="divide-y divide-gray-200">
            <% if @conversations.any? %>
              <% @conversations.each do |user| %>
                <%= link_to messages_path(user_id: user.id), class: "block p-4 hover:bg-gray-50 transition-colors" do %>
                  <div class="flex gap-3">
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-semibold text-gray-900 truncate"><%= user.full_name %></p>
                      <p class="text-xs text-gray-600 mt-1"><%= user.role.titleize %></p>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% else %>
              <div class="p-8 text-center text-gray-500">
                <p class="mt-2">No conversations yet</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Messages Area -->
        <div class="md:col-span-2 flex flex-col">
          <% if @other_user %>
            <div class="p-4 bg-gray-50 border-b border-gray-200">
              <h3 class="text-base font-semibold text-gray-900"><%= @other_user.full_name %></h3>
            </div>

            <div id="messages" class="flex-1 overflow-y-auto p-4 space-y-4">
              <% if @messages.any? %>
                <% @messages.each do |message| %>
                  <%= render 'message', message: message, current_user: current_user %>
                <% end %>
              <% else %>
                <div class="text-center text-gray-500 py-12">
                  <p>No messages yet</p>
                </div>
              <% end %>
            </div>

            <div class="p-4 border-t border-gray-200 bg-white">
              <%= form_with model: Message.new, url: messages_path(user_id: @other_user.id), class: "flex gap-2" do |f| %>
                <%= f.text_area :content, rows: 2, class: "flex-1 rounded-lg border-gray-300", placeholder: "Type your message...", required: true %>
                <%= f.submit "Send", class: "px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700" %>
              <% end %>
            </div>
          <% else %>
            <div class="flex-1 flex items-center justify-center text-gray-500">
              <p class="mt-4 text-lg">Select a conversation to start messaging</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
